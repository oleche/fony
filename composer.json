{
    "name": "geekcow/fony",
    "type": "library",
    "description": "Fony PHP API framework installer",
    "license": "Apache-2.0",
    "keywords": ["fony", "fony-core", "api"],
    "homepage": "https://github.com/oleche/fony",
    "version": "0.0.1",
    "authors": [
        {
            "name": "Oscar Leche",
            "email": "oleche@geekcowsd.com",
            "homepage": "http://www.oscarleche.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4" : {
            "Geekcow\\Fony\\" : "src/"
        }
    },
    "require" : {
        "geekcow/fony-core": "0.0.*",
        "psr/log": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^8"
    },
    "scripts": {
        "auto-scripts": {
          "setup": "Geekcow\\Fony\\Installer\\Setup::init"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "create-core-user": "Geekcow\\Fony\\Installer\\UserCreation::createCore",
        "setup": "Geekcow\\Fony\\Installer\\Setup::init"
    }
}
